---
const events = [
    {
        date: "27 Janvier 2026",
        title: "Bière Sécu Rennes #10 : 27 janvier 18h30",
        year: "2026",
        location: "Bloom Pop (métro Courrouze)",
        locationUrl: "https://www.openstreetmap.org/node/11283783269",
        description: "Programmation à venir...",
        talks: [],
    },
    {
        date: "25 Novembre 2025",
        title: "Bière Sécu Rennes #9 : 25 novembre 18h30",
        year: "2025",
        location: "L'Uzine, 13 quai Lamennais (République)",
        locationUrl: "https://www.openstreetmap.org/node/1969738755",
        description: `<a href="https://www.quarkslab.com/fr/" target="_blank" rel="noopener noreferrer" class="text-primary hover:underline">Quarkslab</a> nous fait le privilège d'offrir la première tournée de cette session et d'inaugurer les présentations ! Merci beaucoup à eux pour leur soutien.`,
        talks: [
            "<strong>Présentation invitée Quarkslab:</strong> Chain of Thought F's everybody par <em>virtualabs</em>",
            "Pwning a pilot phone via its $30 drone control app (20min) de <em>Cyp et areizen</em>",
            "Container Hardening - Overview & Retex (20min) de <em>Arcelone</em>",
            "Exploiting Anno 1404 (20min) de <em>tomtombinary</em>",
        ],
    },
    {
        date: "30 Septembre 2025",
        title: "Bière Sécu Rennes #8 : 30 septembre 18h30",
        year: "2025",
        location: "Bloom Pop (métro Courrouze)",
        locationUrl: "https://www.openstreetmap.org/node/11283783269",
        description: "",
        talks: [
            "IoT 101 : Silvercrest Deutsche Chinese Qualität (15min) de <em>Nyaru</em>",
            "Tout système non testé est réputé ne pas fonctionner (2x20min) de <em>roubachof[CTI]</em>",
            "One certificate to rule them all: l'histoire d'un réseau d'ORB Chinois (20min) de <em>Amaury Garçon</em>",
        ],
    },
];

const nextEvent = events[0];
const pastEvents = events.slice(1);
---

<section class="py-16 px-4 max-w-4xl mx-auto space-y-20">
    <!-- Next Event Section -->
    <div class="space-y-8">
        <h2 class="text-3xl font-bold text-center">Prochain Événement</h2>

        <div
            class="bg-white dark:bg-gray-800 rounded-2xl shadow-xl border border-gray-100 dark:border-gray-700 overflow-hidden transform hover:scale-[1.01] transition-transform duration-300"
        >
            <div class="bg-primary/5 dark:bg-primary/10 p-1">
                <div
                    class="p-6 md:p-8 md:flex md:justify-between md:items-start gap-6"
                >
                    <div class="flex-grow space-y-4">
                        <div class="flex flex-wrap items-center gap-3">
                            <span
                                class="px-3 py-1 text-sm font-semibold text-primary bg-primary/10 rounded-full"
                            >
                                {nextEvent.year}
                            </span>
                            <h3
                                class="text-2xl font-bold text-gray-900 dark:text-white"
                            >
                                {nextEvent.title}
                            </h3>
                        </div>

                        <div
                            class="flex items-center text-lg font-medium text-gray-600 dark:text-gray-300"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="h-5 w-5 mr-2 text-primary"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                                ></path>
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                            <a
                                href={nextEvent.locationUrl}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="hover:text-primary hover:underline transition-colors"
                            >
                                {nextEvent.location}
                            </a>
                        </div>

                        {
                            nextEvent.description && (
                                <div
                                    class="prose dark:prose-invert text-gray-600 dark:text-gray-300"
                                    set:html={nextEvent.description}
                                />
                            )
                        }

                        {
                            nextEvent.talks.length > 0 && (
                                <div class="pt-4 border-t border-gray-100 dark:border-gray-700">
                                    <h4 class="text-sm font-semibold text-gray-400 uppercase tracking-wider mb-3">
                                        Programme
                                    </h4>
                                    <ul class="space-y-3">
                                        {nextEvent.talks.map((talk) => (
                                            <li class="flex gap-3 text-gray-700 dark:text-gray-200">
                                                <span class="text-primary mt-1.5">
                                                    •
                                                </span>
                                                <span set:html={talk} />
                                            </li>
                                        ))}
                                    </ul>
                                </div>
                            )
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Past Events Loop -->
    <div class="space-y-12">
        <h2
            class="text-2xl font-bold text-center text-gray-500 dark:text-gray-400"
        >
            Événements Passés
        </h2>
        <div
            class="relative border-l-2 border-gray-200 dark:border-gray-700 ml-3 md:ml-6 space-y-12"
        >
            {
                pastEvents.map((event) => (
                    <div class="relative pl-8 md:pl-12">
                        <div class="absolute -left-[9px] top-0 w-4 h-4 rounded-full bg-gray-300 dark:bg-gray-600 border-4 border-white dark:border-gray-900" />
                        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-2">
                            <h3 class="text-xl font-bold text-gray-900 dark:text-white">
                                {event.title}
                            </h3>
                            <span class="text-sm font-mono text-gray-500 dark:text-gray-400 bg-gray-100 dark:bg-gray-800 px-2 py-1 rounded">
                                {event.year}
                            </span>
                        </div>
                        <div class="text-lg font-medium text-primary mb-2">
                            <a
                                href={event.locationUrl}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="hover:underline"
                            >
                                {event.location}
                            </a>
                        </div>
                        {event.description && (
                            <div
                                class="mb-4 text-gray-600 dark:text-gray-300"
                                set:html={event.description}
                            />
                        )}
                        {event.talks.length > 0 && (
                            <ul class="space-y-2 text-gray-600 dark:text-gray-200">
                                {event.talks.map((talk) => (
                                    <li class="flex gap-2">
                                        <span class="text-primary">•</span>
                                        <span set:html={talk} />
                                    </li>
                                ))}
                            </ul>
                        )}
                    </div>
                ))
            }
        </div>
    </div>
</section>
